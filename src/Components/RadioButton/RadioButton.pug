mixin radio-btn(label, label2, id)
    div.radio-buttons
        div.form_radio
            input(id=("radio-" + id) type="radio" name="radio" value="id" checked)
            label(for=("radio-" + id) ) #{label}
        div.form_radio
            input(id=("radio-" + id+1) type="radio" name="radio" value="id+1" checked)
            label(for=("radio-" + id+1) ) #{label2}